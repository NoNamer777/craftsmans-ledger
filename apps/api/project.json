{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "@craftsmans-ledger/api",
    "projectType": "application",
    "sourceRoot": "apps/api/src",
    "tags": ["framework:nest", "scope:api"],
    "targets": {
        "prisma-generate-client": {
            "executor": "nx:run-commands",
            "inputs": ["{workspaceRoot}/prisma.config.ts", "{projectRoot}/prisma/schema.prisma"],
            "outputs": ["{workspaceRoot}/prisma/client"],
            "cache": true,
            "options": {
                "command": "npx prisma generate client"
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "dependsOn": ["prisma-generate-client"],
            "options": {
                "command": "webpack-cli build"
            },
            "defaultConfiguration": "prod",
            "configurations": {
                "prod": {
                    "args": ["--node-env production"]
                },
                "dev": {
                    "args": ["--node-env development"]
                }
            }
        },
        "docker-build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "docker build --tag craftsmans-ledger/api:latest -f apps/api/.docker/Dockerfile ."
            }
        },
        "serve": {
            "continuous": true,
            "executor": "@nx/js:node",
            "options": {
                "buildTarget": "@craftsmans-ledger/api:build:dev",
                "inspect": false,
                "runBuildTargetDependencies": false
            }
        }
    }
}
