{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "web-app",
    "projectType": "application",
    "sourceRoot": "apps/web-app/src",
    "tags": ["scope:ui", "framework:angular"],
    "prefix": "cml",
    "targets": {
        "build": {
            "executor": "@angular/build:application",
            "outputs": ["{options.outputPath}"],
            "options": {
                "allowedCommonJsDependencies": ["class-validator", "papaparse"],
                "baseHref": "./",
                "browser": "apps/web-app/src/main.ts",
                "outputPath": "dist/apps/web-app",
                "inlineStyleLanguage": "scss",
                "scripts": [
                    "node_modules/bootstrap/dist/js/bootstrap.bundle.min.js",
                    "node_modules/reflect-metadata/Reflect.js"
                ],
                "stylePreprocessorOptions": {
                    "sass": {
                        "silenceDeprecations": ["import", "color-functions", "global-builtin"]
                    }
                },
                "styles": ["apps/web-app/src/styles.scss"],
                "tsConfig": "apps/web-app/tsconfig.app.json"
            },
            "defaultConfiguration": "prod",
            "configurations": {
                "prod": {
                    "assets": [
                        {
                            "glob": "**/*",
                            "input": "apps/web-app/public",
                            "ignore": ["*-template*"]
                        }
                    ],
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "800kb",
                            "maximumError": "1mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "4kb",
                            "maximumError": "8kb"
                        }
                    ]
                },
                "dev": {
                    "assets": [
                        {
                            "glob": "**/*",
                            "input": "apps/web-app/public",
                            "ignore": ["*-template*"]
                        },
                        {
                            "glob": "**/*",
                            "input": ".msw"
                        },
                        {
                            "glob": "**/*",
                            "input": "data",
                            "output": "data"
                        }
                    ],
                    "extractLicenses": false,
                    "namedChunks": true,
                    "optimization": false,
                    "sourceMap": true,
                    "watch": true
                }
            }
        },
        "docker-build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "docker bake --sbom true --provenance true -f .docker/docker-bake.hcl web-app"
            }
        },
        "serve": {
            "executor": "@angular/build:dev-server",
            "continuous": true,
            "options": {
                "buildTarget": "web-app:build:dev",
                "host": "localhost.www.craftsmans-ledger.net",
                "port": 7000,
                "ssl": true,
                "sslKey": "certificate-key.pem",
                "sslCert": "certificate.pem"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        }
    }
}
